{
  "name": "server",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun build ./src/server.ts --outdir=dist --minify --target=bun && npx cpy \"src/templates/**\" \"dist/templates\" --parents",
    "start": "bun run dist/server.js",
    "typecheck": "tsc --noEmit",
    "dev": "bun run typecheck &&  nodemon --watch src --ext ts --exec bun run /src/server.ts | pino-pretty",
    "lint": "bunx eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint . --ext ts --fix",
    "seed:super-admin": "exit 0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/bun": "latest",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/html-to-text": "^9.0.4",
    "@types/morgan": "^1.9.10",
    "@types/nodemailer": "^7.0.9",
    "cpy-cli": "^7.0.0",
    "eslint": "^10.0.0",
    "nodemon": "^3.1.11"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "cloudinary": "^2.9.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "fs-extra": "^11.3.3",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "html-to-text": "^9.0.5",
    "jose": "^6.1.3",
    "juice": "^11.1.1",
    "mongoose": "^9.1.6",
    "morgan": "^1.10.1",
    "nodemailer": "^8.0.1",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "zod": "^4.3.6"
  }
}
